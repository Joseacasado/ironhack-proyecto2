<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Edit event</h1>

      <hr>
      
      <form action='/shows-crud/create' method='POST'>
        <div class='form-group'>
          <label for='name'>Name</label>
          <input type='text' class='form-control' id='name' name="name" value="{{name}}" required>
        </div>
        <div class="custom-file">
            <label class="custom-file-label" for="eventImageFile">Select image</label>
            <input name="eventImageFile" type="file" class="custom-file-input" id="eventImageFile">
        </div>

        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" value="{{dates.start.localDate}}">
          </div>
          <div class="col-md-6 mb-3">
            {{#with _embedded.venues.[0]}}
            <label for="venue">Venue</label>
            <input type="text" class="form-control" id="venue" name="venue" value="{{name}}">
            {{/with}}
          </div>
        </div>

        <div class="form-row">
          {{#with priceRanges.[0]}}
          <div class="col-md-6 mb-3">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" name="price" min="0" value="{{max}}">
          </div>
          <div class="col-md-6 mb-3">
            <label for="currency">Currency</label>
            <input type="text" class="form-control" id="currency" name="currency" value="{{currency}}">
          </div>
          {{/with}}
        </div>

        <div class='form-group'>
          <label for='url'>Tickets Url</label>
          <input type='text' class='form-control' id='url' name="url" value="{{url}}">
        </div>

        <div class="form-row">
          {{#with _embedded.venues.[0]}}
          <div class="col-md-6 mb-3">
            <label for="latitude">Latitude</label>
            <input type="text" class="form-control" id="latitude" name="latitude" value="{{location.latitude}}">
          </div>
          <div class="col-md-6 mb-3">
            <label for="longitude">Longitude</label>
            <input type="text" class="form-control" id="longitude" name="longitude" value="{{location.longitude}}">
          </div>
          {{/with}}
        </div>

        <div class="form-group">
          <label for="info">Description</label>
          <textarea name="info" id="info" cols="100" rows="4">{{info}}</textarea>
        </div>

        <div class="form-group">
          <button type='submit' class='btn btn-dark d-block'>Edit Event</button>
          <a class="btn btn-danger btn-lg" href="/shows-crud/{{id}}/delete">Delete event</a>
        </div>

        {{#if errorMsg}}
          {{errorMsg}}
        {{/if}}
      </form>
    </div>
  </div>
</div>