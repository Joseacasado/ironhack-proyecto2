<div class="container">
    <div class="row justify-content-between align-items-center my-3 user-profile custom-forms">

        <div class="col-md-4 user-info">

            <figure>
                <img src="{{user.avatar}}" alt="{{user.name}} ">
            </figure>
            <h3>{{user.fullname}}</h3>
            <h4>username: <strong>{{user.username}}</strong></h4>
            <p>Email address: <strong>{{user.email}}</strong></p>

            <div class="btn-group" role="group" aria-label="Basic example">
                <a href="/profile/edit" class="btn btn-dark btn-lg">Edit</a>
                <a href="/logout" class="btn btn-dark btn-lg">Log out</a>
            </div>
            
        </div>

        <div class="col-md-6 fav-list">
            <div class="row justify-content-center">
                {{#each user.events_id}}
                    <div class="col-3 col-lg-3">
                        <div id="user-cards" class="card mt-3">
                            <a href="/events/details/{{_id}}"><img src="{{images.0.url}}" class="card-img-top" alt="{{elm.name}}"></a>
                            <div class="card-body">
                                <p class="text-truncate"><strong>{{name}}</strong></p>
                                <p>{{dates.start.localDate}} || {{dates.start.localTime}} h.</p>
                                <hr>
                                <a href="/profile/attend/{{id}}" class="">Attend</a>
                                || 
                                <a href="/profile/remove-fav/{{id}}" class="">Remove</a> 
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>

        </div>
    </div>

</div>