<div class="container">

    <div class="row justify-content-center my-3">

        <div class="col-md-7 custom-forms">

            <header>
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-5">
                        <h1>Edit Profile</h1>
                    </div>

                    <div class="col-md-7 text-center">
                        <figure>
                            <img id="profile-img-id" src="{{user.avatar}}"
                                alt="{{user.username}}">
                        </figure>
                        <button class="btn btn-light" id="profile-pic-btn">Upload Profile Picture</button>

                        <form method="POST" action="/profile/edit/picture" class="pic-form hide" enctype="multipart/form-data">
                            <div class="custom-file">
                                <input name="imageFile" type="file" class="custom-file-input" id="imageFile">
                                <label class="custom-file-label" for="imageFile">Select image</label>
                            </div>
                            <button type="submit" class="save-btn">Save</button>
                            <button type="button" class="cancel-btn">Cancel</button>
                        </form>
                    </div>
                </div>
            </header>



            <form method="POST" action="/profile/edit">
                
                <div class="form-group">
                    <label>Fullname</label>
                    <input type="text" class="form-control" name="fullname" value="{{user.fullname}}">
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="{{user.username}}">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" value="{{user.email}}">
                </div>
                <button type="submit" class="btn btn-dark">Save</button>
            </form>
        </div>
    </div>
</div>
<script src="/javascripts/files-upload/profile-pic-dom.js"></script>